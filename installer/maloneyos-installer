#!/bin/bash

# Check for root privileges
if [ "$EUID" -eq 0 ] || [ "$(id -u)" -eq 0 ]; then
    echo "Error: This script cannot be executed as root or with sudo."
    exit 1
fi

CMD=$(sudo pkexec env DISPLAY=$DISPLAY XAUTHORITY=$XAUTHORITY python3)
INSTALLER="/maloneyos/installer"

${CMD} ${INSTALLER}/disks.py
${CMD} ${INSTALLER}/zfs.sh
${CMD} ${INSTALLER}/squashfs.py
${CMD} ${INSTALLER}/chroot.sh
${CMD} ${INSTALLER}/makeinitcpio.py
${CMD} ${INSTALLER}/bootloader.sh
${CMD} ${INSTALLER}/user.sh
${CMD} ${INSTALLER}/cleanup.sh
${CMD} ${INSTALLER}/finalize.py